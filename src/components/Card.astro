---
const { href, title, description, img } = Astro.props;
---

<div class="link-card overflow-hidden rounded-t">
	<a href={href}>
		<img
			src="../algorithms.png"
			alt="Knowledge Portfolio"
			width="100%"
			transition:name="img"
		/>

		<div class="card-details p-10 border border-purple-300">
			<h3 class="text-2xl font-bold text-purple-300 mb-3">{title}</h3>
			<p class="text-purple-200">{description}</p>
			<p class="text-purple-200">Stack: {description}</p>
		</div>
	</a>
</div>
