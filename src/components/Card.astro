<div
	class=`card group max-w-[700px] z-10 p-4 bt hover:border-violet00 transition-all rounded-md bg-slate-500/[.2] md:col-span-2`
>
	<a href={href} class="group">
		<div
			class=`relative overflow-hidden max-h-[300px] h-full rounded-md after:absolute after:w-full after:h-full after:top-0 after:left-0 after:z-10 after:transition duration-300 after:bg-gradient-to-r bg-gradient-to-r from-blue-700 via-blue-800 to-gray-900  after:opacity-0 group-hover:after:opacity-10`
		>
			<img
				src={img}
				alt={title}
				width="100%"
				transition:name=`img-${index}`
				class="max-h-[300px] h-full object-cover group-hover:scale-105 transition duration-1000"
			/>

			<p>{stackBgColor}</p>
		</div>
		<div class="card-details p-10 pb-20 transition-all">
			<h3 class="text-2xl font-bold text-purple-300 mb-3">{title}</h3>
			<p class="text-purple-200">{description}</p>

			<Stack stackList={stackList} stackBgColor={stackBgColor} />
		</div>
	</a>
