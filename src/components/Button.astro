---
const { github = false, url, target, svg = false, slot, text } = Astro.props;
---

<div
	class="group relative after:absolute after:left-[50%] after:bottom-0 after:translate-x-[-50%] after:w-16 after:h-1 after:bg-violet-500 after:rounded-full after:z-0 after:transition-w after:transition-h after:duration-300 hover:after:w-4/5 hover:after:h-4/5"
>
	<a
		href={url}
		target="_blank"
		class="button pointer py-3 px-6 flex gap-3 items-center font-medium tracking-wide text-sm uppercase text-purple-200 relative group-hover:text-white bg-white bg-opacity-5 shadow-lg shadow-black/35 border-t-2 border-b-2 border-white/5 rounded-full z-10 backdrop-blur-md transition-all"
	>
		<!-- <slot /> -->
		<span>{text}</span>
		{
			svg && (
				<span>
					<svg
						class="-rotate-90
		max-w-[20px] max-h-[20px]"
						height="512px"
						id="Layer_1"
						style="enable-background:new 0 0 512 512;"
						version="1.1"
						viewBox="0 0 512 512"
						width="512px"
						xml:space="preserve"
						xmlns="http://www.w3.org/2000/svg"
						xmlns:xlink="http://www.w3.org/1999/xlink"
					>
						<path
							d="M98.9,184.7l1.8,2.1l136,156.5c4.6,5.3,11.5,8.6,19.2,8.6c7.7,0,14.6-3.4,19.2-8.6L411,187.1l2.3-2.6  c1.7-2.5,2.7-5.5,2.7-8.7c0-8.7-7.4-15.8-16.6-15.8v0H112.6v0c-9.2,0-16.6,7.1-16.6,15.8C96,179.1,97.1,182.2,98.9,184.7z"
							fill="rgb(233 213 255)"
						/>
					</svg>
				</span>
			)
		}

		{
			github && (
				<span>
					<svg
						class="max-w-[20px] max-h-[20px]"
						enable-background="new 0 0 512 512"
						height="512px"
						id="Layer_1"
						version="1.1"
						viewBox="0 0 512 512"
						width="512px"
						xml:space="preserve"
						xmlns="http://www.w3.org/2000/svg"
						xmlns:xlink="http://www.w3.org/1999/xlink"
					>
						<g>
							<path
								clip-rule="evenodd"
								d="M296.133,354.174c49.885-5.891,102.942-24.029,102.942-110.192   c0-24.49-8.624-44.448-22.67-59.869c2.266-5.89,9.515-28.114-2.734-58.947c0,0-18.139-5.898-60.759,22.669   c-18.139-4.983-38.09-8.163-56.682-8.163c-19.053,0-39.011,3.18-56.697,8.163c-43.082-28.567-61.22-22.669-61.22-22.669   c-12.241,30.833-4.983,53.057-2.718,58.947c-14.061,15.42-22.677,35.379-22.677,59.869c0,86.163,53.057,104.301,102.942,110.192   c-6.344,5.452-12.241,15.873-14.507,30.387c-12.702,5.438-45.808,15.873-65.758-18.592c0,0-11.795-21.31-34.012-22.669   c0,0-22.224-0.453-1.813,13.592c0,0,14.96,6.812,24.943,32.653c0,0,13.6,43.089,76.179,29.48v38.543   c0,5.906-4.53,12.702-15.865,10.89C96.139,438.977,32.2,354.626,32.2,255.77c0-123.807,100.216-224.022,224.03-224.022   c123.347,0,224.023,100.216,223.57,224.022c0,98.856-63.946,182.754-152.828,212.688c-11.342,2.266-15.873-4.53-15.873-10.89   V395.45C311.1,374.577,304.288,360.985,296.133,354.174L296.133,354.174z M512,256.23C512,114.73,397.263,0,256.23,0   C114.73,0,0,114.73,0,256.23C0,397.263,114.73,512,256.23,512C397.263,512,512,397.263,512,256.23L512,256.23z"
								fill="rgb(233 213 255)"
								fill-rule="evenodd"
							/>
						</g>
					</svg>
				</span>
			)
		}
	</a>
</div>
<style>
	a {
		/* background: rgba(100, 116, 139, 0);
		box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
		backdrop-filter: blur(2px);
		-webkit-backdrop-filter: blur(2px);
		border: 1px solid rgba(100, 116, 139, 0.3);
		cursor: pointer;
		color: #fff; */
	}

	svg {
		max-height: 20px;
		max-width: 20px;
	}

	svg path {
		transition: all 300ms;
	}

	a:hover svg path {
		fill: #fff;
	}
</style>
