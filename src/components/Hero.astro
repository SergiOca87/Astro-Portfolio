	function mouseMoveFunc(e) {
		// ease: 'back.out(1.7)';
		decorators.forEach((decorator, index) => {
			const depth = index === 0 || index === 1 ? 40 : 100;
			const moveX = (e.pageX - window.innerWidth / 2) / depth;
			const moveY = (e.pageY - window.innerHeight / 2) / depth;
			index++;

			gsap.to(decorator, {
				x: moveX * index,
				y: moveY * index,
				delay: 0.1,
				repeatRefresh: true,
				rotation:
					index === 0 || index === 1
						? `${moveY * index}_short`
						: `${moveX * index}_short`,
			});
		});
	}
