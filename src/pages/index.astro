<Layout title="Sergi Oca | Portfolio">
	<main>
		<section class="intro">
			<div class="container mx-auto xl px-5 pt-20 intro-wrap">
				<p class="pretitle font-bold text-purple-300 mb-2 pl-10">
					Hello, I'm Sergi
				</p>
				<h1 class="head_text text-center mb-4 neon_gradient">
					This is my <br /><span class="pl-20">Portfolio</span>
				</h1>

				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="200px"
					height="200px"
					viewBox="0 0 200 200"
					version="1.1"
					class="triangle1"
				>
					<polygon
						style="fill:none;stroke:#f0abfc;stroke-width:2px"
						points="183.138438763306,172 16.8615612366939,172 100,28"
					></polygon>
				</svg>

				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="200px"
					height="200px"
					viewBox="0 0 200 200"
					version="1.1"
					class="triangle2"
				>
					<polygon
						style="fill:none;stroke:#5b21b6;stroke-width:2px"
						points="183.138438763306,172 16.8615612366939,172 100,28"
					></polygon>
				</svg>
			</div>
		</section>
	</main>

	<section class="projects"></section>

