---
import Stack from '../components/Stack.astro';
import Layout from '../layouts/RootLayout.astro';
import { Image } from 'astro:assets';
// const { frontmatter } = Astro.props;
// const { title, description } = frontmatter;
const { title, img, stackList, stackBgColor, slot } = Astro.props;
---

<Layout title={title}>
	<section class="mt-20">
		<div class="flex gap-4">
			<div class="flex-1">
				<div class="relative">
					<h1 class="head_text text-center mb-4 neon_gradient">
						{title}
					</h1>

					<Stack stackList={stackList} stackBgColor={stackBgColor} />

					<p>Github</p>
					<p>See Live Button</p>
				</div>
			</div>
			<div class="flex-1">
				<img
					src={img}
					alt={title}
					width="500"
					transition:name="img-1"
				/>
			</div>
		</div>
	</section>

	<section class="pt-20 pb-20">
		<div class="container max-w-4xl ml-auto mr-auto">
			<h2
				class="text-lg font-bold text-purple-300 mb-12 after:absolute after:w-4/5 after:h-px
				after:bg-indigo-400
				after:-bottom-2
				after:-right-4
				relative
				w-fit"
			>
				Project Description
			</h2>

			<div class="text-white">
				<slot />
			</div>
		</div>
	</section>
</Layout>

<style>
	h1 {
		font-size: 4rem;
		font-weight: 900;
		line-height: 1.2;
		text-align: left;
